@model SocialNetworking_Kata.Data.Models.Follow

@{
	ViewBag.Title = "Follows";
}

<h2>Follows</h2>
@using (Html.BeginForm())

{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<div class="col-md-10">
				@Html.HiddenFor(model => model.FollowId)
				@Html.HiddenFor(model => model.UserFollowId)
				</div>
		</div>		
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Follows" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>	
	@Html.ActionLink("Back to User", "User", new { id = Model.FollowId })
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}

